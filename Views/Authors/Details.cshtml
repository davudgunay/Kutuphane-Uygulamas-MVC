@model LibraryMVC.Models.Author

@{
	ViewData["Title"] = "Detaylar";
}

<h1>Detaylar</h1>

<div>
	<h4>Yazar</h4>
	<hr />
	<dl class="row">
		<dt class="col-sm-2">
			@Html.DisplayNameFor(model => model.Name)
		</dt>
		<dd class="col-sm-10">
			@Html.DisplayFor(model => model.Name)
		</dd>
		<dt class="col-sm-2">
			@Html.DisplayNameFor(model => model.BirthDate)
		</dt>
		<dd class="col-sm-10">
			@if (Model.BirthDate != null)
			{
				@Model.BirthDate.Value.ToShortDateString()
			}
		</dd>
		<dt class="col-sm-2">
			@Html.DisplayNameFor(model => model.DeathDate)
		</dt>
		<dd class="col-sm-10">
			@if (Model.DeathDate != null)
			{
				@Model.DeathDate.Value.ToShortDateString()
			}
		</dd>
		<dt class="col-sm-2">
			@Html.DisplayNameFor(model => model.Gender)
		</dt>
		<dd class="col-sm-10">
			@Html.DisplayFor(model => model.Gender)
		</dd>
	</dl>
</div>
<div>
	<a asp-action="Edit" asp-route-id="@Model?.Id">Güncelle</a> |
	<a asp-action="Index">Listeye Geri Dön</a>
</div>
