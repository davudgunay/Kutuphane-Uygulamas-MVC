@model IEnumerable<LibraryMVC.Models.Book>

@{
	ViewData["Title"] = "İçerik";
}

<h1>İçerik</h1>

<p>
	<a asp-action="Create">Yeni Kayıt</a>
</p>
<table class="table">
	<thead>
		<tr>
			<th>
				@Html.DisplayNameFor(model => model.ISBN)
			</th>
			<th>
				@Html.DisplayNameFor(model => model.Title)
			</th>
			<th>
				@Html.DisplayNameFor(model => model.Author)
			</th>
			<th></th>
		</tr>
	</thead>
	<tbody>
		@foreach (var item in Model)
		{
			<tr>
				<td>
					@Html.DisplayFor(modelItem => item.ISBN)
				</td>
				<td>
					@Html.DisplayFor(modelItem => item.Title)
				</td>
				<td>
					@Html.DisplayFor(modelItem => item.Author.Name)
				</td>
				<td>
					<a asp-action="Edit" asp-route-id="@item.ISBN">Güncelle</a> |
					<a asp-action="Details" asp-route-id="@item.ISBN">Detaylar</a> |
					<a asp-action="Delete" asp-route-id="@item.ISBN">Sil</a>
				</td>
			</tr>
		}
	</tbody>
</table>
